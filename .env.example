# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration (for PostgreSQL)
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# External API Keys
PEXELS_API_KEY=your-pexels-api-key-here

# Email Configuration (for password reset and notifications)
# For production: Configure with your SMTP server details
# For development: Emails will be printed to console (no configuration needed)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
PASSWORD_RESET_TIMEOUT=259200
EMAIL_HOST_PASSWORD=your-email-password
# Phone Number Configuration
# Set default region for phone number validation (leave empty for international format)
# Examples: US, GB, TR, PK, IN, etc.
PHONENUMBER_DEFAULT_REGION=
